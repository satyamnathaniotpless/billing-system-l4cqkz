# Application Configuration
# @version: 1.0.0
VITE_MODE=production
VITE_APP_NAME=OTPless Billing
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=https://api.billing.otpless.com
VITE_API_TIMEOUT=30000
VITE_API_VERSION=v1

# Localization Settings
VITE_DEFAULT_LOCALE=en
VITE_DEFAULT_CURRENCY=USD
VITE_DEFAULT_TIMEZONE=UTC

# Authentication Configuration
VITE_AUTH_DOMAIN=auth.otpless.com
VITE_AUTH_CLIENT_ID=${AUTH0_CLIENT_ID}
VITE_AUTH_AUDIENCE=https://api.billing.otpless.com
VITE_AUTH_SCOPE="openid profile email"

# Security Settings
VITE_ENABLE_CSRF=true
VITE_CSRF_HEADER_NAME=X-CSRF-Token
VITE_ENABLE_REQUEST_SIGNING=true
VITE_SIGNATURE_HEADER_NAME=X-Request-Signature
VITE_RATE_LIMIT_THRESHOLD=1000

# Analytics and Monitoring
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=${SENTRY_DSN}
VITE_SENTRY_ENVIRONMENT=production
VITE_ENABLE_ERROR_REPORTING=true

# Wallet Configuration
VITE_LOW_BALANCE_THRESHOLD=1000
VITE_MIN_TOPUP_AMOUNT=100
VITE_MAX_TOPUP_AMOUNT=100000
VITE_WALLET_REFRESH_INTERVAL=30000

# Cache Configuration
VITE_CACHE_TTL_PRICE_PLANS=3600
VITE_CACHE_TTL_WALLET_BALANCE=30
VITE_CACHE_TTL_USAGE_METRICS=300
VITE_CACHE_TTL_CUSTOMER_PROFILE=900
VITE_CACHE_STORAGE_PREFIX=otpless_billing_

# UI Configuration
VITE_ENABLE_DARK_MODE=true
VITE_PRIMARY_COLOR=#1976D2
VITE_SECONDARY_COLOR=#90CAF9
VITE_SUCCESS_COLOR=#4CAF50
VITE_ERROR_COLOR=#F44336
VITE_WARNING_COLOR=#FFC107

# Pagination Settings
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100
VITE_PAGE_SIZE_OPTIONS=[10,25,50,100]

# Date Format Settings
VITE_DATE_FORMAT_DISPLAY=DD MMM YYYY
VITE_DATE_FORMAT_API=YYYY-MM-DD
VITE_DATE_FORMAT_TIMESTAMP=YYYY-MM-DD HH:mm:ss

# Feature Flags
VITE_ENABLE_USAGE_ANALYTICS=true
VITE_ENABLE_WALLET_ALERTS=true
VITE_ENABLE_AUTO_INVOICE=true
VITE_ENABLE_MULTI_CURRENCY=true