# Application Environment
VITE_MODE=test
VITE_APP_NAME=OTPless Billing
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=http://localhost:8080
VITE_API_TIMEOUT=5000

# Localization Settings
VITE_DEFAULT_LOCALE=en
VITE_DEFAULT_CURRENCY=USD

# Authentication Configuration
VITE_AUTH_ENABLED=true
VITE_AUTH0_DOMAIN=test-otpless.auth0.com
VITE_AUTH0_CLIENT_ID=test-client-id
VITE_AUTH0_AUDIENCE=https://api.test.otpless.com

# Test-Specific Features
VITE_ENABLE_MOCK_API=true
VITE_ENABLE_DEBUG_LOGGING=true
VITE_ENABLE_TEST_COVERAGE=true
VITE_ENABLE_E2E_TESTING=true
VITE_ENABLE_TEST_METRICS=true

# Mock API Configuration
VITE_MOCK_API_DELAY=100

# Test User Credentials
VITE_TEST_USER_EMAIL=test@otpless.com
VITE_TEST_USER_PASSWORD=test-password

# Wallet Configuration
VITE_LOW_BALANCE_THRESHOLD=100
VITE_MIN_TOPUP_AMOUNT=10
VITE_MAX_TOPUP_AMOUNT=1000

# Test Analytics
VITE_TEST_ANALYTICS_ENDPOINT=http://localhost:8081/analytics