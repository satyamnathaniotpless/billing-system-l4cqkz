# API Configuration
VITE_API_BASE_URL=http://localhost:8080
VITE_API_TIMEOUT=30000
VITE_API_VERSION=v1

# Application Information
VITE_APP_NAME=OTPless Billing
VITE_APP_VERSION=1.0.0

# Localization Settings
VITE_DEFAULT_LOCALE=en
VITE_DEFAULT_CURRENCY=USD

# Authentication Configuration
VITE_AUTH_ENABLED=true
VITE_AUTH0_DOMAIN=dev-otpless.auth0.com
VITE_AUTH0_CLIENT_ID=development-client-id
VITE_AUTH0_AUDIENCE=https://api.dev.otpless.com
VITE_AUTH0_SCOPE=openid profile email
VITE_AUTH0_REDIRECT_URI=http://localhost:3000/callback

# Development Features
VITE_ENABLE_MOCK_API=true
VITE_MOCK_API_DELAY=500
VITE_ENABLE_DEBUG_LOGGING=true
VITE_DEBUG_LEVEL=verbose
VITE_ENABLE_API_VALIDATION=true
VITE_ENABLE_ERROR_BOUNDARIES=true